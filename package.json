{
  "name": "noraneko",
  "version": "1.0.0",
  "private": true,
  "description": "Noraneko - A monorepo web application with React frontend and Express backend",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"yarn workspace @noraneko/backend dev\" \"yarn workspace @noraneko/frontend dev\"",
    "dev:frontend": "yarn workspace @noraneko/frontend dev",
    "dev:backend": "yarn workspace @noraneko/backend dev",
    "build": "yarn workspaces foreach -A run build",
    "build:frontend": "yarn workspace @noraneko/frontend build",
    "build:backend": "yarn workspace @noraneko/backend build",
    "lint": "eslint packages/*/src/**/*.{ts,tsx}",
    "lint:fix": "eslint packages/*/src/**/*.{ts,tsx} --fix",
    "format": "prettier --write \"packages/*/src/**/*.{ts,tsx,json,css}\"",
    "format:check": "prettier --check \"packages/*/src/**/*.{ts,tsx,json,css}\"",
    "db:up": "docker compose up -d",
    "db:down": "docker compose down",
    "db:migrate": "yarn workspace @noraneko/backend prisma migrate dev",
    "db:generate": "yarn workspace @noraneko/backend prisma generate",
    "db:studio": "yarn workspace @noraneko/backend prisma studio"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "concurrently": "^9.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "globals": "^15.0.0",
    "prettier": "^3.3.0",
    "typescript": "^5.6.0"
  },
  "packageManager": "yarn@4.12.0",
  "engines": {
    "node": ">=20.0.0"
  }
}
